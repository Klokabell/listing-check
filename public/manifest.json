{
  "manifest_version": 3,
  "version": "0.4.0",
  "name": "Linkedin Listing Check v1.4",

  "permissions": [
    "tabs",
    "notifications",
    "scripting",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "32": "/assets/icon32.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["./content.js"],
      "css": ["./content.css"],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "background": { "service_worker": "background.js", "type": "module" }
}
